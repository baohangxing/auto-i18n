{
  "version": "0.3.8",
  "private": true,
  "packageManager": "pnpm@7.6.0",
  "description": "auto-i18n monorepo",
  "author": "H1mple<https://github.com/baohangxing>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "release": "esno ./scripts/release",
    "auto-publish": "esno ./scripts/publish",
    "build": "pnpm -r build",
    "coverage": "pnpm -r coverage",
    "pretest": "pnpm run build",
    "changelog": "esno ./scripts/changelog",
    "test": "nr --dir ./packages/core coverage && nr --dir ./packages/cli coverage"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.34.0",
    "@antfu/ni": "^0.20.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.15",
    "bumpp": "^8.2.1",
    "compare-func": "^2.0.0",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.27.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "pnpm": "^7.18.2",
    "simple-git": "^3.15.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.4",
    "unbuild": "^1.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "eslint --cache --fix"
    ]
  }
}
